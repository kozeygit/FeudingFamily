@namespace FeudingFamily.Components.Pages.PresenterPage

<div class="question" @onclick="Reveal">
    @if (!IsRevealed)
    {
        <div class="overlay">
            We Asked 100 People...
        </div>
    }
    <h1 class="question-content" id="question-content">
        @Content
    </h1>
</div>


<style>
    .question {
        flex: 1;
        width: 100%;
        border: 3px solid #d4af37;
        border-radius: 20px;
        display: grid;
        place-items: center;
        background: linear-gradient(135deg, #1a3a52 0%, #0f1e2e 50%, #1a3a52 100%);
        box-shadow: 
            0 0 40px rgba(212,175,55,0.3),
            inset 0 1px 0 rgba(255,255,255,0.1),
            0 20px 40px rgba(0,0,0,0.8);
        overflow: hidden;
        position: relative;

        * {
            color: #fff;
            font-weight: 700;
            font-size: clamp(28px, 4vw, 56px);
            text-shadow: 2px 2px 8px rgba(0,0,0,0.7);
            text-transform: uppercase;
            text-align: center;
            padding: 0 1rem;
        }
    }

    .question::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(90deg, transparent, rgba(212,175,55,0.05), transparent);
        pointer-events: none;
    }

    .overlay {
        position: absolute;
        inset: 0;
        width: 100%;
        background: linear-gradient(90deg, #d4af37, #f3d79a);
        display: flex;
        justify-content: center;
        align-items: center;
        color: #0b0b0b;
        font-weight: 900;
        letter-spacing: 2px;
        z-index: 10;
    }

    .question-content {
        padding: 2rem;
        position: relative;
        z-index: 5;
    }
</style>


@code {
    [Parameter] public bool IsRevealed { get; set; }
    [Parameter] public string Content { get; set; } = string.Empty;
    [Parameter] public EventCallback OnClick { get; set; }

    private async Task Reveal()
    {
        await OnClick.InvokeAsync();
        @* IsRevealed = !IsRevealed; *@
    }

}