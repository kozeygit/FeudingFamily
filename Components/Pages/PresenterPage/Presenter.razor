@page "/Presenter"
@page "/Presenter/{GameKey}"
@layout Layout.EmptyLayout
@inherits PresenterPageBase
@using Microsoft.AspNetCore.SignalR.Client
@using FeudingFamily.Logic
@rendermode InteractiveServer

<PageTitle>FeudingFamily - Presenter</PageTitle>
<main>
  <dialog class="wrong-modal" id="wrong-modal" open=@IsWrongModalShown></dialog>
  <dialog class="buzzer-modal" id="buzzer-modal" open=@IsBuzzerModalShown></dialog>

  <div class="game-board">
    <div class="question is-revealed">
      <h1 id="question-content">
        @Question.Content;
      </h1>
    </div>

    <div class="answers">
      @foreach (var answer in Question.Answers)
      {
        <div class="answer is-revealed" id="answer-{@answer.Ranking}">
          <h2 class="answer-ranking" id="answer-ranking">
            @answer.Ranking
          </h2>
          <h2 class="answer-content" id="answer-content">
            @answer.Content
          </h2>
          <h2 class="answer-points" id="answer-points">
            @answer.Points
          </h2>
        </div>
      }
    </div>

    <div class="left-timer-container ">
      <div class="timer" id="left_timer"></div>
    </div>

    <div class="right-timer-container">
      <div class="timer" id="right_timer"></div>
    </div>

  </div>

</main>
