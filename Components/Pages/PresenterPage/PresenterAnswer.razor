@namespace FeudingFamily.Components.Pages.PresenterPage

<div class="answer" id="answer-@Ranking" @onclick="Reveal">
    <div class="overlay @(IsRevealed ? "hidden" : "")" id="overlay-@Ranking">
        @Ranking
    </div>
    <span class="answer-ranking">
        @Ranking
    </span>
    <span class="answer-content">
        @Content
    </span>
    <span class="answer-points">
        @Points
    </span>
</div>


<style>
    .answer {
        width: 100%;
        display: flex;
        position: relative;
        align-items: center;
        justify-content: center;
        border: 2px solid #d4af37;
        border-radius: 16px;
        overflow: hidden;
        background: linear-gradient(135deg, #1a3a52 0%, #0f1e2e 50%, #1a3a52 100%);
        box-shadow: 
            0 0 25px rgba(212,175,55,0.25),
            inset 0 1px 0 rgba(255,255,255,0.08),
            0 15px 35px rgba(0,0,0,0.7);
        transition: all 300ms ease;

        * {
            color: #ffffff;
            font-weight: 700;
            font-size: clamp(18px, 2.6vw, 30px);
            text-shadow: 1px 1px 6px rgba(0,0,0,0.8);
            text-transform: uppercase;
        }
    }

    .answer::before {
        content: "";
        position: absolute;
        inset: 0;
        background: linear-gradient(90deg, transparent, rgba(212,175,55,0.08), transparent);
        pointer-events: none;
    }

    .overlay {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, #d4af37 0%, #f3d79a 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 900;
        color: #0b0b0b;
        letter-spacing: 2px;
        font-size: 2.2rem;
        z-index: 20;
    }

    .hidden {
        transition: transform 500ms ease-out, opacity 300ms ease-in;
        transform: translateX(-110%);
        opacity: 0;
    }

    .answer.revealed .overlay { display: none; }

    .answer:active { transform: scale(0.98); }

    .answer-points {
        flex: 2;
        border-left: solid rgba(255,255,255,0.05) 1px;
        text-align: center;
        color: #ffd965;
        font-weight: 800;
        position: relative;
        z-index: 5;
    }

    .answer-ranking {
        flex: 1;
        border-right: solid rgba(255,255,255,0.05) 1px;
        text-align: center;
        color: rgba(255,255,255,0.95);
        font-weight: 800;
        position: relative;
        z-index: 5;
    }

    .answer-content {
        flex: 12;
        padding-left: 1.5rem;
        position: relative;
        z-index: 5;
    }
</style>


@code {
    [Parameter] public bool IsRevealed { get; set; }
    [Parameter] public int Ranking { get; set; }
    [Parameter] public string Content { get; set; } = string.Empty;
    [Parameter] public int Points { get; set; }
    [Parameter] public EventCallback OnClick { get; set; }

    private async void Reveal()
    {
        await OnClick.InvokeAsync();
        IsRevealed = !IsRevealed;
    }

}